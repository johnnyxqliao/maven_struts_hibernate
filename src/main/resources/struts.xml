<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="true" />

	<package name="maven_struts_hibernate" extends="struts-default">
		<action name="login" class="shiyanlou.Login" method="execute">
			<result name="success">/HelloWorld.jsp</result>
			<result name="error">/Error.jsp</result>
		</action>

		<action name="register" class="shiyanlou.register" method="execute">
			<result name="success">/regSuccess.jsp</result>
			<result name="error">/regError.jsp</result>
		</action>

	</package>
</struts>